<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="CarApp.Views.MainWindow"
        Title="Car Simulator"
        Width="400" Height="400">
    <StackPanel Spacing="10" Margin="20">
        <TextBlock Text="Enter Car Color &amp; Model" FontSize="16"/>
        <TextBox Name="ColorInput" Watermark="Car Color" KeyUp="TextBox_KeyUp"/>
        <TextBox Name="ModelInput" Watermark="Car Model" KeyUp="TextBox_KeyUp"/>
        <Button Name="SetCarButton" Content="Set Car" Click="SetCar_Click"/>
        
        <TextBlock Name="CarInfo" Text="No car selected" FontSize="14" Margin="10"/>
        
        <TextBox Name="DistanceInput" Watermark="Distance to Drive (km)" KeyUp="TextBox_KeyUp"/>
        <Button Name="DriveButton" Content="Drive" Click="Drive_Click"/>
        
        <TextBlock Name="ResultOutput" Text="" FontSize="14" Margin="10"/>
    </StackPanel>
</Window>
